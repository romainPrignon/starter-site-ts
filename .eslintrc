{
  "extends": [
    "standard",
    "plugin:import/errors",
    "plugin:react/recommended"
  ],
  "plugins": [
    "import",
    "react",
    "react-hooks"
  ],
  "parserOptions": {
    "ecmaVersion":2018,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "env": {
    "node": true,
    "jest": true,
    "es6": true,
    "browser": true,
    "serviceworker": true
  },
  "rules": {
    "no-console": ["off"],
    "react/prop-types": ["off"],
    "react-hooks/rules-of-hooks": ["error"],
    "react-hooks/exhaustive-deps": ["error"]
  }
}
